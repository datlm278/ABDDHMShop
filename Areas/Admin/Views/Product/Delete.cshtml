@model BTL_LTWeb.Models.EF.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3 style="margin: 20px 20px">Are you sure you want to delete this product?</h3>
<div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Category</th>
                                    <th>Product name</th>
                                    <th>Price</th>
                                    <th>Content</th>
                                    <th>Discount</th>
                                    <th>Image</th>
                                    <th>Time create</th>
                                    <th>Views</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                    <tr>
                                        <td>@Model.id</td>
                                        <td>@Model.Catalog.name</td>
                                        <td>@Model.name</td>
                                        <td>@Model.price</td>
                                        <td>@Model.content</td>
                                        <td>@Model.discount</td>
                                        <td>@Model.image_link</td>
                                        <td>@Model.time_created</td>
                                        <td>@Model.views</td>
                                        <td>
                                            @using (Html.BeginForm())
                                            {
                                                @Html.AntiForgeryToken()

                                            <div class="form-actions no-color">
                                                <input type="submit" value="Yes" class="btn btn-primary" />
                                                <a class="btn btn-primary" href="@Url.Action("Index")" style="margin-left: 10px">No</a>
                                            </div>
                                            }
                                        </td>
                                    </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
            </div>
        </div>
    </div>
</div>
