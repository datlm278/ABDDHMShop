@model BTL_LTWeb.Models.EF.Transaction
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<h3 style="margin: 20px 20px">
    If you delete all orders in this transaction will also be deleted.
    Are you sure you want to delete this transation?
</h3>
<div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>User ID</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Amount</th>
                                    <th>Payment</th>
                                    <th>Payment details</th>
                                    <th>Message</th>
                                    <th>Status</th>
                                    <th>Security</th>
                                    <th>Time created</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.id</td>
                                    <td>@Model.user_id</td>
                                    <td>@Model.user_name</td>
                                    <td>@Model.user_email</td>
                                    <td>@Model.amount</td>
                                    <td>@Model.payment</td>
                                    <td>@Model.payment_info</td>
                                    <td>@Model.message</td>
                                    <td>@Model.status</td>
                                    <td>@Model.security</td>
                                    <td>@Model.time_created</td>
                                    <td>
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="form-actions no-color">
                                            <input type="submit" value="Yes" class="btn btn-primary" />
                                            <a class="btn btn-primary" href="@Url.Action("Index")" style="margin-left: 10px">No</a>
                                        </div>
                                    }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
            </div>
        </div>
    </div>
</div>