@model PagedList.IPagedList<BTL_LTWeb.Models.EF.Catalog>
@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "Category";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="card-header"><h3 class="text-center font-weight-light my-4">Categories list</h3></div>

@*<form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">*@
@using (Html.BeginForm("Index", "Category", FormMethod.Get, new { @class = "d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0" }))
{
    <div class="input-group" style="margin-top: 20px">
        <input class="form-control" type="text" name="searchString" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch" value="@ViewBag.SearchString" />
        <button class="btn btn-primary" id="btnNavbarSearch" type="submit"><i class="fas fa-search"></i></button>
    </div>
}
@*</form>*@

<div class="left">
    <a class="btn btn-primary" href="@Url.Action("Create")" style="margin: 20px 20px">Create</a>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Category name</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.id</td>
                                    <td>@item.name</td>
                                    <td>
                                        <a href="/Admin/Category/Edit/@item.id">Edit</a>
                                        |
                                        <a href="/Admin/Category/Delete/@item.id">Delete</a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
        </div>
    </div>
</div>



